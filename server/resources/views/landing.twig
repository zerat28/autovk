<!-- Регистрация -->
<section id="contact">
    <div class="container">
        <h2 class="text-center text-uppercase text-secondary mb-0">Регистрация</h2>
        <hr class="star-dark mb-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <form name="sentMessage" id="contactForm" novalidate="novalidate" autocomplete="off">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Имя</label>
                            <input class="form-control" id="name" name="name" type="text" placeholder="Имя"
                                   required="required" data-validation-required-message="Введите имя">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Email</label>
                            <input class="form-control" id="email" name="email" type="email" placeholder="Email"
                                   required="required"
                                   data-validation-required-message="Введите Email">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Пароль</label>
                            <input class="form-control" id="password" name="password" type="password"
                                   placeholder="Пароль" required="required"
                                   data-validation-required-message="Введите пароль">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-xl" id="sendMessageButton">Зарегистрироваться</button>
                        {{ csrf.field |raw }}
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

